{
    "name": "Fairy Flight",
    "description": "You can fly like in creative mode, but itâ€™s tied to your Flight Energy, which starts off at 100 and charges by 5 every second. Flying drains 10 energy every second. If you use up all of your Flight Energy, you cannot fly until you filled up at least 25% of the bar! You cannot recover Flight Evergy while flying with an Elytra or Creative Flight.",
    "type": "origins:multiple",
    "meter": {
        "type": "origins:resource",
        "min": 0,
        "max": 100,
        "start_value": 100,
        "hud_render": {
            "should_render": true,
            "sprite_location": "origins:textures/gui/community/spiderkolo/resource_bar_01.png",
            "bar_index": 15,
            "condition": {
                "type": "origins:constant",
                "value": true
            }
        },
        "min_action": {
            "type": "origins:execute_command",
            "command": "tag @s add CMD_Fairy_NoFly"
        }
    },
    "cooldown": {
        "condition": {
            "type": "origins:and",
            "conditions": [
                {
                    "inverted": true,
                    "type": "origins:creative_flying"
                },
                {
                    "inverted": true,
                    "type": "origins:fall_flying"
                }
            ]
        },
        "type": "origins:action_over_time",
        "interval": 4,
        "entity_action": {
            "type": "origins:and",
            "actions": [
                {
                    "type": "origins:change_resource",
                    "resource": "ucr_stitch:fairy/fairy_flight_meter",
                    "change": 1,
                    "operation": "add"
                },
                {
                    "type": "origins:if_else",
                    "condition": {
                        "type": "origins:resource",
                        "resource": "ucr_stitch:fairy/fairy_flight_meter",
                        "comparison": ">=",
                        "compare_to": 25
                    },
                    "if_action": {
                        "type": "origins:execute_command",
                        "command": "tag @s remove CMD_Fairy_NoFly"
                    }
                }
            ]
        }
    },
    "fly": {
        "condition": {
            "type": "origins:and",
            "conditions": [
                {
                    "inverted": true,
                    "type": "origins:nbt",
                    "nbt": "{Tags: ['CMD_Fairy_NoFly']}"
                }
            ]
        },
        "type": "origins:creative_flight"
    },
    "fly_drain": {
        "condition": {
            "type": "origins:and",
            "conditions": [
                {
                    "type": "origins:creative_flying"
                },
                {
                    "type": "origins:or",
                    "conditions": [
                        {
                            "type": "origins:gamemode",
                            "gamemode": "survival"
                        },
                        {
                            "type": "origins:gamemode",
                            "gamemode": "adventure"
                        }
                    ]
                }
            ]
        },
        "type": "origins:action_over_time",
        "interval": 2,
        "entity_action": {
            "type": "origins:change_resource",
            "resource": "ucr_stitch:fairy/fairy_flight_meter",
            "change": -1,
            "operation": "add"
        }
    }
}