{
    "name": "Master Rider Effect",
    "description": "Gain +30% Speed. If you're a horse, also gain Jump Strength. Lasts while a Mounted Marksman rides you!",
    "type": "origins:multiple",
    "remove": {
        "type": "origins:action_over_time",
        "interval": 5,
        "entity_action": {
            "type": "origins:if_else",
            "condition": {
                "type": "origins:passenger_recursive",
                "bientity_condition": {
                    "type": "origins:actor_condition",
                    "condition": {
                        "type": "origins:origin",
                        "origin": "ucr_stitch:mounted_marksman"
                    }
                },
                "comparison": "==",
                "compare_to": 0
            },
            "if_action": {
                "type": "origins:revoke_power",
                "power": "ucr_stitch:mounted_marksman/master_rider_effect",
                "source": "ucr_stitch:mounted_marksman"
            }
        }
    },
    "speed": {
        "type": "origins:attribute",
        "modifier": {
            "attribute": "minecraft:generic.movement_speed",
            "operation": "multiply_base",
            "value": 0.3
        },
        "update_health": true
    },
    "horse_jump_strength": {
        "condition": {
            "type": "origins:entity_type",
            "entity_type": "minecraft:horse"
        },
        "type": "origins:conditioned_attribute",
        "modifier": {
            "attribute": "minecraft:horse.jump_strength",
            "operation": "multiply_total",
            "value": 0.5
        },
        "tick_rate": 20,
        "update_health": false
    }
}