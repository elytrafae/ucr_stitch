{
    "name": "Brittle",
    "description": "Taking half of your Maximum Health as damage or more instantly makes you shatter.",
    "type": "origins:action_over_time",
    "interval": 1,
    "entity_action": {
        "type": "origins:and",
        "actions": [
            {
                "type": "origins:execute_command",
                "command": "function ucr_stitch:brittle/hpcheck"
            },
            {
                "type": "origins:if_else",
                "condition": {
                    "type": "origins:scoreboard",
                    "objective": "CMD_Temp",
                    "comparison": ">=",
                    "compare_to": 0
                },
                "if_action": {
                    "type": "origins:and",
                    "actions": [
                        {
                            "type": "origins:execute_command",
                            "command": "function ucr_stitch:brittle/death_effects"
                        },
                        {
                            "type": "origins:damage",
                            "amount": 9999999,
                            "source": {
                                "name": "ucr_stitch.shatter",
                                "bypasses_armor": true,
                                "unblockable": true,
                                "out_of_world": true
                            }
                        }
                    ]
                }
            }
        ]
    }
}