{
    "name": "Broom: Booster",
    "description": "Accelerate your broom for 3 seconds. During this, it starts emitting a harmful magic aura in a 2 block radius, dealing 5 Magic Damage constantly. Has a cooldown of 15 seconds.",
    "type": "origins:multiple",
    "active": {
        "condition": {
            "type": "origins:and",
            "conditions": [
                {
                    "type": "origins:riding",
                    "bientity_condition": {
                        "type": "origins:target_condition",
                        "condition": {
                            "type": "origins:in_tag",
                            "tag": "ucr_stitch:brooms"
                        }
                    }
                },
                {
                    "type": "origins:resource",
                    "resource": "*:*_cooldown",
                    "comparison": ">=",
                    "compare_to": 300
                }
            ]
        },
        "type": "origins:active_self",
        "entity_action": {
            "type": "origins:and",
            "actions": [
                {
                    "type": "origins:execute_command",
                    "command": "playsound minecraft:entity.allay.item_taken player @a ~ ~ ~ 5 0.5"
                },
                {
                    "type": "origins:change_resource",
                    "resource": "*:*_cooldown",
                    "change": 0,
                    "operation": "set"
                },
                {
                    "type": "origins:change_resource",
                    "resource": "*:*_duration",
                    "change": 60,
                    "operation": "set"
                }
            ]
        },
        "cooldown": 1,
        "hud_render": {
            "should_render": false
        },
        "key": {
            "key": "key.origins.secondary_active"
        }
    },
    "duration": {
        "type": "origins:resource",
        "min": 0,
        "max": 60,
        "start_value": 0,
        "hud_render": {
            "should_render": true,
            "sprite_location": "origins:textures/gui/community/huang/resource_bar_01.png",
            "bar_index": 20,
            "condition": {
                "type": "origins:resource",
                "resource": "*:*_duration",
                "comparison": ">",
                "compare_to": 0
            }
        }
    },
    "cooldown": {
        "type": "origins:resource",
        "min": 0,
        "max": 300,
        "start_value": 300,
        "hud_render": {
            "should_render": true,
            "sprite_location": "origins:textures/gui/community/huang/resource_bar_01.png",
            "bar_index": 20,
            "condition": {
                "type": "origins:and",
                "conditions": [
                    {
                        "type": "origins:resource",
                        "resource": "*:*_duration",
                        "comparison": "<=",
                        "compare_to": 0
                    },
                    {
                        "type": "origins:resource",
                        "resource": "*:*_cooldown",
                        "comparison": "<",
                        "compare_to": 300
                    }
                ]
            }
        }
    },
    "dur_tick": {
        "condition": {
            "type": "origins:resource",
            "resource": "*:*_duration",
            "comparison": ">",
            "compare_to": 0
        },
        "type": "origins:action_over_time",
        "interval": 1,
        "entity_action": {
            "type": "origins:if_else",
            "condition": {
                "inverted": true,
                "type": "origins:riding",
                "bientity_condition": {
                    "type": "origins:target_condition",
                    "condition": {
                        "type": "origins:in_tag",
                        "tag": "ucr_stitch:brooms"
                    }
                }
            },
            "if_action": {
                "type": "origins:change_resource",
                "resource": "*:*_duration",
                "change": 0,
                "operation": "set"
            },
            "else_action": {
                "type": "origins:riding_action",
                "action": {
                    "type": "origins:and",
                    "actions": [
                        {
                            "type": "origins:execute_command",
                            "command": "particle minecraft:entity_effect ~ ~0.5 ~ 1 0.5 1 1 10 force"
                        },
                        {
                            "type": "origins:add_velocity",
                            "z": 1.5,
                            "space": "local",
                            "client": true,
                            "server": true,
                            "set": true
                        },
                        {
                            "type": "origins:area_of_effect",
                            "radius": 2,
                            "bientity_condition": {
                                "inverted": true,
                                "type": "origins:invert",
                                "condition": {
                                    "type": "origins:riding"
                                }
                            },
                            "bientity_action": {
                                "type": "origins:damage",
                                "amount": 5,
                                "source": {
                                    "name": "magic",
                                    "magic": true
                                }
                            }
                        }
                    ]
                },
                "bientity_action": {
                    "type": "origins:actor_action",
                    "action": {
                        "type": "origins:change_resource",
                        "resource": "*:*_duration",
                        "change": -1,
                        "operation": "add"
                    }
                }
            }
        }
    },
    "cd_tick": {
        "condition": {
            "type": "origins:resource",
            "resource": "*:*_duration",
            "comparison": "<=",
            "compare_to": 0
        },
        "type": "origins:action_over_time",
        "interval": 4,
        "entity_action": {
            "type": "origins:change_resource",
            "resource": "*:*_cooldown",
            "change": 4,
            "operation": "add"
        }
    }
}