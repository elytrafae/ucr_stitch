{
    "name": "Business Advice",
    "description": "Talk with a Villager and give them an emerald. If they are a child, advance their education. If they are a Nitwit, convince them to go job hunting. If they are an Apprentice or above in a field, convince them to switch up their shop. Either way, they will be greatful for the conversation! (Cooldown: 30 seconds)",
    "type": "origins:multiple",
    "cooldown": {
        "type": "origins:resource",
        "min": 0,
        "max": 600,
        "start_value": 600,
        "hud_render": {
            "should_render": true,
            "sprite_location": "origins:textures/gui/community/huang/resource_bar_01.png",
            "bar_index": 24,
            "condition": {
                "type": "origins:resource",
                "resource": "*:*_cooldown",
                "comparison": "<",
                "compare_to": 1200
            }
        }
    },
    "active": {
        "type": "origins:active_self",
        "entity_action": {
            "type": "origins:and",
            "actions": [
                {
                    "type": "origins:if_else",
                    "condition": {
                        "type": "origins:equipped_item",
                        "equipment_slot": "mainhand",
                        "item_condition": {
                            "type": "origins:ingredient",
                            "ingredient": {
                                "item": "minecraft:emerald"
                            }
                        }
                    },
                    "if_action": {
                        "type": "origins:raycast",
                        "distance": 6,
                        "block": true,
                        "entity": true,
                        "shape_type": "collider",
                        "fluid_handling": "none",
                        "bientity_condition": {
                            "type": "origins:target_condition",
                            "condition": {
                                "type": "origins:and",
                                "conditions": [
                                    {
                                        "type": "origins:entity_type",
                                        "entity_type": "minecraft:villager"
                                    },
                                    {
                                        "type": "origins:or",
                                        "conditions": [
                                            {
                                                "type": "origins:nbt",
                                                "nbt": "{VillagerData:{profession:\"minecraft:nitwit\"}}"
                                            },
                                            {
                                                "inverted": true,
                                                "type": "origins:nbt",
                                                "nbt": "{VillagerData:{level:1}}"
                                            },
                                            {
                                                "type": "origins:command",
                                                "command": "data get entity @s Age",
                                                "comparison": "<",
                                                "compare_to": 0
                                            }
                                        ]
                                    }
                                ]
                            }
                        },
                        "bientity_action": {
                            "type": "origins:and",
                            "actions": [
                                {
                                    "type": "origins:actor_action",
                                    "action": {
                                        "type": "origins:and",
                                        "actions": [
                                            {
                                                "type": "origins:equipped_item_action",
                                                "equipment_slot": "mainhand",
                                                "action": {
                                                    "type": "origins:consume",
                                                    "amount": 1
                                                }
                                            },
                                            {
                                                "type": "origins:change_resource",
                                                "resource": "*:*_cooldown",
                                                "change": 0,
                                                "operation": "set"
                                            },
                                            {
                                                "type": "origins:execute_command",
                                                "command": "tag @s add CMD_TravelingMerchant"
                                            }
                                        ]
                                    }
                                },
                                {
                                    "type": "origins:target_action",
                                    "action": {
                                        "type": "origins:if_else_list",
                                        "actions": [
                                            {
                                                "condition": {
                                                    "type": "origins:command",
                                                    "command": "data get entity @s Age",
                                                    "comparison": "<",
                                                    "compare_to": 0
                                                },
                                                "action": {
                                                    "type": "origins:execute_command",
                                                    "command": "function ucr_stitch:traveling_merchant/increase_age"
                                                }
                                            },
                                            {
                                                "condition": {
                                                    "type": "origins:nbt",
                                                    "nbt": "{VillagerData:{profession:\"minecraft:nitwit\"}}"
                                                },
                                                "action": {
                                                    "type": "origins:execute_command",
                                                    "command": "function ucr_stitch:traveling_merchant/clear_type"
                                                }
                                            },
                                            {
                                                "condition": {
                                                    "type": "origins:constant",
                                                    "value": true
                                                },
                                                "action": {
                                                    "type": "origins:execute_command",
                                                    "command": "function ucr_stitch:traveling_merchant/refresh_trades"
                                                }
                                            }
                                        ]
                                    }
                                },
                                {
                                    "type": "origins:target_action",
                                    "action": {
                                        "type": "origins:execute_command",
                                        "command": "function ucr_stitch:traveling_merchant/great_opinion"
                                    }
                                },
                                {
                                    "type": "origins:actor_action",
                                    "action": {
                                        "type": "origins:and",
                                        "actions": [
                                            {
                                                "type": "origins:play_sound",
                                                "sound": "minecraft:entity.villager.celebrate",
                                                "volume": 1,
                                                "pitch": 1
                                            },
                                            {
                                                "type": "origins:play_sound",
                                                "sound": "minecraft:entity.experience_orb.pickup",
                                                "volume": 1,
                                                "pitch": 1.5
                                            },
                                            {
                                                "type": "origins:execute_command",
                                                "command": "tag @s remove CMD_TravelingMerchant"
                                            }
                                        ]
                                    }
                                }
                            ]
                        }
                    },
                    "else_action": {
                        "type": "origins:execute_command",
                        "command": "title @a actionbar {\"text\":\"You have to hold an Emerald in your main hand!\",\"bold\":true,\"color\":\"dark_green\"}"
                    }
                }
            ]
        },
        "cooldown": 1,
        "hud_render": {
            "should_render": false
        },
        "key": {
            "key": "key.origins.secondary_active"
        }
    },
    "charge_cd": {
        "type": "origins:action_over_time",
        "interval": 4,
        "entity_action": {
            "type": "origins:change_resource",
            "resource": "*:*_cooldown",
            "change": 4,
            "operation": "add"
        }
    }
}