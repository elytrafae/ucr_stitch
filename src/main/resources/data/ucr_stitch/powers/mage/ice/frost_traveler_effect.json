{
    "name": "Frost Traveler Effect",
    "description": "Sets your Frost Walker level to the level of the Ice Mage riding you",
    "type": "origins:multiple",
    "remove": {
        "type": "origins:action_over_time",
        "interval": 5,
        "entity_action": {
            "type": "origins:if_else",
            "condition": {
                "type": "origins:passenger_recursive",
                "bientity_condition": {
                    "type": "origins:actor_condition",
                    "condition": {
                        "type": "origins:origin",
                        "origin": "ucr_stitch:mages/ice"
                    }
                },
                "comparison": "==",
                "compare_to": 0
            },
            "if_action": {
                "type": "origins:revoke_power",
                "power": "ucr_stitch:mage/ice/frost_traveler_effect",
                "source": "ucr_stitch:mages/ice"
            }
        }
    },
    "ride_on": {
        "condition": {
            "type": "origins:passenger_recursive",
            "bientity_condition": {
                "type": "origins:actor_condition",
                "condition": {
                    "type": "origins:and",
                    "conditions": [
                        {
                            "type": "origins:origin",
                            "origin": "ucr_stitch:mages/ice"
                        },
                        {
                            "type": "origins:power_active",
                            "power": "ucr_stitch:mage/ice/frost_traveler_toggle"
                        }
                    ]
                }
            },
            "comparison": ">=",
            "compare_to": 1
        },
        "type": "apugli:modify_enchantment_level",
        "enchantment": "minecraft:frost_walker",
        "modifier": {
            "operation": "set_total",
            "value": 2
        }
    },
    "ride_off": {
        "condition": {
            "type": "origins:passenger_recursive",
            "bientity_condition": {
                "type": "origins:actor_condition",
                "condition": {
                    "type": "origins:and",
                    "conditions": [
                        {
                            "type": "origins:origin",
                            "origin": "ucr_stitch:mages/ice"
                        },
                        {
                            "inverted": true,
                            "type": "origins:power_active",
                            "power": "ucr_stitch:mage/ice/frost_traveler_toggle"
                        }
                    ]
                }
            },
            "comparison": ">=",
            "compare_to": 1
        },
        "type": "apugli:modify_enchantment_level",
        "enchantment": "minecraft:frost_walker",
        "modifier": {
            "operation": "set_total",
            "value": 0
        }
    }
}