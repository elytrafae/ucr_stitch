{
    "name": "Frost Traveler",
    "description": "You can toggle between having Frost Walker 0 and Frost Walker 2, regardless of what level of Frost Walker your boots have! Additionally, this Frost Walker can be transmitted to living entities you ride. Having it on costs 10 Mana per second.",
    "type": "origins:multiple",
    "toggle": {
        "type": "origins:toggle",
        "active_by_default": true,
        "key": {
            "key": "key.ucr_stitch.never_active"
        },
        "retain_state": true
    },
    "ability": {
        "type": "origins:active_self",
        "entity_action": {
            "type": "origins:and",
            "actions": [
                {
                    "type": "origins:toggle",
                    "power": "ucr_stitch:mage/ice/frost_traveler_toggle"
                },
                {
                    "type": "origins:if_else",
                    "condition": {
                        "type": "origins:power_active",
                        "power": "ucr_stitch:mage/ice/frost_traveler_toggle"
                    },
                    "if_action": {
                        "type": "origins:execute_command",
                        "command": "function ucr_stitch:mages/ice/ft_on"
                    },
                    "else_action": {
                        "type": "origins:execute_command",
                        "command": "function ucr_stitch:mages/ice/ft_off"
                    }
                }
            ]
        },
        "cooldown": 0,
        "key": {
            "key": "key.origins.secondary_active"
        }
    },
    "self_on": {
        "condition": {
            "type": "origins:power_active",
            "power": "ucr_stitch:mage/ice/frost_traveler_toggle"
        },
        "type": "apugli:modify_enchantment_level",
        "enchantment": "minecraft:frost_walker",
        "modifier": {
            "operation": "set_total",
            "value": 2
        }
    },
    "self_off": {
        "condition": {
            "inverted": true,
            "type": "origins:power_active",
            "power": "ucr_stitch:mage/ice/frost_traveler_toggle"
        },
        "type": "apugli:modify_enchantment_level",
        "enchantment": "minecraft:frost_walker",
        "modifier": {
            "operation": "set_total",
            "value": 0
        }
    },
    "riding": {
        "type": "origins:action_over_time",
        "interval": 5,
        "entity_action": {
            "type": "origins:riding_action",
            "action": {
                "type": "origins:grant_power",
                "power": "ucr_stitch:mage/ice/frost_traveler_effect",
                "source": "ucr_stitch:mages/ice"
            },
            "bientity_condition": {
                "type": "origins:target_condition",
                "condition": {
                    "type": "origins:living"
                }
            },
            "recursive": true
        }
    },
    "mana_drain": {
        "condition": {
            "type": "origins:power_active",
            "power": "ucr_stitch:mage/ice/frost_traveler_toggle"
        },
        "type": "origins:action_over_time",
        "interval": 4,
        "entity_action": {
            "type": "origins:change_resource",
            "resource": "ucr_stitch:mage/essence_real",
            "change": -2,
            "operation": "add"
        }
    }
}