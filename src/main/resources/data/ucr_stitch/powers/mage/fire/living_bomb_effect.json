{
    "name": "Living Bomb Effect",
    "description": "When extinguished, blow up in a fiery explosion",
    "type": "origins:action_over_time",
    "interval": 4,
    "entity_action": {
        "type": "origins:if_else",
        "condition": {
            "inverted": true,
            "type": "origins:on_fire"
        },
        "if_action": {
            "type": "origins:and",
            "actions": [
                {
                    "type": "origins:damage",
                    "amount": 6,
                    "source": {
                        "name": "onFire",
                        "fire": true
                    }
                },
                {
                    "type": "origins:set_on_fire",
                    "duration": 5
                },
                {
                    "type": "origins:execute_command",
                    "command": "function ucr_stitch:mages/fire/lb_explode"
                },
                {
                    "type": "origins:area_of_effect",
                    "radius": 6,
                    "include_target": true,
                    "bientity_condition": {
                        "type": "origins:target_condition",
                        "condition": {
                            "type": "origins:living"
                        }
                    },
                    "bientity_action": {
                        "type": "origins:and",
                        "actions": [
                            {
                                "type": "origins:damage",
                                "amount": 8,
                                "source": {
                                    "name": "onFire",
                                    "fire": true
                                }
                            },
                            {
                                "type": "origins:target_action",
                                "action": {
                                    "type": "origins:set_on_fire",
                                    "duration": 8
                                }
                            }
                        ]
                    }
                },
                {
                    "type": "origins:revoke_power",
                    "power": "ucr_stitch:mage/fire/living_bomb_effect",
                    "source": "ucr_stitch:mages/fire"
                }
            ]
        },
        "else_action": {
            "type": "origins:execute_command",
            "command": "particle minecraft:flame ~ ~0.5 ~ 0.5 0.5 0.5 0.1 20 force"
        }
    }
}