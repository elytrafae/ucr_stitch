{
    "name": "Hungerless",
    "description": "You don't have a hunger bar, so you cannot eat, and don't have passive health regen. Instead, you regenerate half a heart per 50 excess Essence you accumulated every 0.25 seconds.",
    "type": "origins:multiple",
    "hunger_refill": {
        "type": "origins:action_over_time",
        "interval": 4,
        "entity_action": {
            "type": "origins:feed",
            "food": 50,
            "saturation": 1
        }
    },
    "regen_essence": {
        "type": "origins:resource",
        "min": 0,
        "max": 500,
        "start_value": 0,
        "hud_render": {
            "should_render": true,
            "sprite_location": "origins:textures/gui/community/spiderkolo/resource_bar_02.png",
            "bar_index": 9
        }
    },
    "passive_regen_disable": {
        "type": "origins:disable_regen"
    },
    "regen": {
        "condition": {
            "type": "origins:and",
            "conditions": [
                {
                    "type": "origins:relative_health",
                    "comparison": "<",
                    "compare_to": 1
                },
                {
                    "type": "origins:resource",
                    "resource": "ucr_stitch:mage/hungerless_regen_essence",
                    "comparison": ">=",
                    "compare_to": 50
                },
                {
                    "inverted": true,
                    "type": "origins:origin",
                    "origin": "ucr_stitch:mages/battle",
                    "layer": "ucr_stitch:mage_specializations"
                }
            ]
        },
        "type": "origins:action_over_time",
        "interval": 5,
        "entity_action": {
            "type": "origins:and",
            "actions": [
                {
                    "type": "origins:heal",
                    "amount": 1
                },
                {
                    "type": "origins:change_resource",
                    "resource": "ucr_stitch:mage/hungerless_regen_essence",
                    "change": -50,
                    "operation": "add"
                }
            ]
        }
    }
}