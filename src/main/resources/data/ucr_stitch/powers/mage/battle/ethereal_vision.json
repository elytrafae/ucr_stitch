{
    "name": "Ethereal Vision",
    "description": "Activate to reveal all living entities around you in a 20 block radius for 5 seconds, but making noises while doing so. Has a cooldown of 10 seconds and costs 80 Essence.",
    "type": "origins:multiple",
    "duration": {
        "type": "origins:resource",
        "min": 0,
        "max": 100,
        "start_value": 0,
        "hud_render": {
            "should_render": true,
            "sprite_location": "origins:textures/gui/community/huang/resource_bar_02.png",
            "bar_index": 20,
            "condition": {
                "type": "origins:resource",
                "resource": "*:*_duration",
                "comparison": ">",
                "compare_to": 0
            }
        }
    },
    "cooldown": {
        "type": "origins:resource",
        "min": 0,
        "max": 200,
        "start_value": 0,
        "hud_render": {
            "should_render": true,
            "sprite_location": "origins:textures/gui/community/huang/resource_bar_02.png",
            "bar_index": 20,
            "condition": {
                "type": "origins:resource",
                "resource": "*:*_duration",
                "comparison": "<=",
                "compare_to": 0
            }
        }
    },
    "cd_dur": {
        "condition": {
            "type": "origins:resource",
            "resource": "*:*_cooldown",
            "comparison": "<",
            "compare_to": 200
        },
        "type": "origins:action_over_time",
        "interval": 10,
        "entity_action": {
            "type": "origins:if_else",
            "condition": {
                "type": "origins:resource",
                "resource": "*:*_duration",
                "comparison": ">",
                "compare_to": 0
            },
            "if_action": {
                "type": "origins:and",
                "actions": [
                    {
                        "type": "origins:change_resource",
                        "resource": "*:*_duration",
                        "change": -11,
                        "operation": "add"
                    },
                    {
                        "type": "origins:execute_command",
                        "command": "playsound minecraft:entity.evoker.prepare_summon player @a ~ ~ ~ 2 2"
                    }
                ]
            },
            "else_action": {
                "type": "origins:change_resource",
                "resource": "*:*_cooldown",
                "change": 10,
                "operation": "add"
            }
        }
    },
    "vision": {
        "condition": {
            "type": "origins:resource",
            "resource": "*:*_duration",
            "comparison": ">",
            "compare_to": 0
        },
        "type": "origins:entity_glow",
        "bientity_condition": {
            "type": "origins:distance",
            "comparison": "<=",
            "compare_to": 20
        },
        "use_teams": true,
        "red": 0.8,
        "green": 0,
        "blue": 0
    },
    "ability": {
        "condition": {
            "type": "origins:and",
            "conditions": [
                {
                    "type": "origins:resource",
                    "resource": "*:*_cooldown",
                    "comparison": ">=",
                    "compare_to": 200
                },
                {
                    "type": "origins:resource",
                    "resource": "ucr_stitch:mage/essence_real",
                    "comparison": ">=",
                    "compare_to": 80
                }
            ]
        },
        "type": "origins:active_self",
        "entity_action": {
            "type": "origins:and",
            "actions": [
                {
                    "type": "origins:change_resource",
                    "resource": "ucr_stitch:mage/essence_real",
                    "change": -80,
                    "operation": "add"
                },
                {
                    "type": "origins:change_resource",
                    "resource": "*:*_cooldown",
                    "change": 0,
                    "operation": "set"
                },
                {
                    "type": "origins:change_resource",
                    "resource": "*:*_duration",
                    "change": 100,
                    "operation": "set"
                }
            ]
        },
        "hud_render": {
            "should_render": false
        },
        "key": {
            "key": "key.origins.primary_active"
        }
    }
}