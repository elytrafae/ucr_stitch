{
    "name": "Evolution and Reversion",
    "description": "This is the technical side of the two abilities. Made them the same because this is very long with minimal changes.",
    "hidden": true,
    "type": "origins:multiple",
    "death_trigger": {
        "type": "origins:prevent_death",
        "damage_condition": {
            "type": "origins:or",
            "conditions": [
                {
                    "type": "origins:name",
                    "name": "hotFloor"
                },
                {
                    "type": "origins:name",
                    "name": "drown"
                }
            ]
        },
        "entity_action": {
            "type": "origins:and",
            "actions": [
                {
                    "type": "origins:clear_effect"
                },
                {
                    "type": "origins:gain_air",
                    "value": 200
                },
                {
                    "type": "origins:set_resource",
                    "resource": "*:*_duration",
                    "value": 40
                },
                {
                    "type": "origins:play_sound",
                    "sound": "entity.zombie_villager.cure",
                    "volume": 1,
                    "pitch": 0.8
                }
            ]
        }
    },
    "duration": {
        "type": "origins:resource",
        "min": 0,
        "max": 40,
        "start_value": 0,
        "hud_render": {
            "should_render": false
        },
        "min_action": {
            "type": "origins:and",
            "actions": [
                {
                    "type": "origins:play_sound",
                    "sound": "entity.zombie_villager.converted",
                    "volume": 1,
                    "pitch": 0.5
                },
                {
                    "type": "origins:if_else",
                    "condition": {
                        "type": "origins:origin",
                        "origin": "ucr_stitch:merling_p",
                        "layer": "origins:origin"
                    },
                    "if_action": {
                        "type": "origins:execute_command",
                        "command": "origin set @s origins:origin ucr_stitch:lavaling"
                    },
                    "else_action": {
                        "type": "origins:execute_command",
                        "command": "origin set @s origins:origin ucr_stitch:merling_p"
                    }
                }
            ]
        }
    },
    "dmg_immune": {
        "condition": {
            "type": "origins:resource",
            "resource": "*:*_duration",
            "comparison": ">",
            "compare_to": 0
        },
        "type": "origins:invulnerability",
        "damage_condition": {
            "type": "origins:constant",
            "value": true
        }
    },
    "effect_immune": {
        "condition": {
            "type": "origins:resource",
            "resource": "*:*_duration",
            "comparison": ">",
            "compare_to": 0
        },
        "type": "origins:effect_immunity"
    },
    "shaking": {
        "condition": {
            "type": "origins:resource",
            "resource": "*:*_duration",
            "comparison": ">",
            "compare_to": 0
        },
        "type": "origins:shaking"
    },
    "duration_tick": {
        "condition": {
            "type": "origins:resource",
            "resource": "*:*_duration",
            "comparison": ">",
            "compare_to": 0
        },
        "type": "origins:action_over_time",
        "interval": 4,
        "entity_action": {
            "type": "origins:and",
            "actions": [
                {
                    "type": "origins:change_resource",
                    "resource": "*:*_duration",
                    "change": -4,
                    "operation": "add"
                },
                {
                    "type": "origins:heal",
                    "amount": 2
                }
            ]
        }
    },
    "noshove": {
        "condition": {
            "type": "origins:resource",
            "resource": "*:*_duration",
            "comparison": ">",
            "compare_to": 0
        },
        "type": "origins:modify_velocity",
        "modifier": {
            "operation": "multiply_total_multiplicative",
            "value": -1
        },
        "axes": [
            "x",
            "y",
            "z"
        ]
    }
